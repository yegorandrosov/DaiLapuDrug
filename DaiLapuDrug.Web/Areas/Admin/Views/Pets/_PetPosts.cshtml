@model IQueryable<PetPostListItemViewModel>


@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add().Titled("Body").Encoded(false).RenderedAs(model => new HtmlString(model.Body));
        columns.Add().Titled("Date").Encoded(false).RenderedAs(model => model.CreatedAt.ToShortDateString());
        columns.Add().Titled("").Encoded(false).RenderedAs(model => new HtmlString($"<a href=\"" + Url.Action("Edit", "Articles", new { id = model.Id, Area = "Admin" }) + "\">Edit</a>"));
    })
    .Empty("No data found")
    .Pageable()
)