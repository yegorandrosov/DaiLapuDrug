@model ArticleViewModel

@{
    ViewBag.Title = "Редактировать новость/статью";
}

<form asp-action="CreateArticleCampaign" asp-controller="Newsletter" asp-area="Admin">
    <input type="hidden" name="articleId" value="@Model.Id" />
    <input type="submit" class="btn btn-primary" value="Создать новостную кампанию" />
</form>

<h3>@ViewBag.Title</h3>


<form asp-action="Edit" asp-controller="Articles" asp-area="Admin">
    <input type="hidden" asp-for="Id" />

    <partial name="_Item" model="Model">
</form>
