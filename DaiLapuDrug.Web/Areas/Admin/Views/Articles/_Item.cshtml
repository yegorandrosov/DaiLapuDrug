@model ArticleViewModel

<style>

</style>

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="form-group col-12">
                <input asp-for="IsPublished" type="checkbox" />
                <label asp-for="IsPublished" class="control-label">Опубликована?</label>
            </div>

            <input type="hidden" asp-for="PetId" />

            @if (Model.PetId == null)
            {
                <div class="form-group col-12">
                    <label asp-for="Title" class="control-label">Заголовок</label>
                    <input asp-for="Title" type="text" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                </div>
            }
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="Body" class="control-label">Содержание</label>
            <textarea asp-for="Body" type="text" class="form-control html-editor" style="min-height: 1000px"></textarea>
        </div>
    </div>
    @if (Model.PetId == null)
    {
        <div class="form-group col-12">
            <label asp-for="PreviewBody" class="control-label">Текст превью</label>
            <input asp-for="PreviewBody" type="text" class="form-control" />
            @Html.ValidationMessageFor(x => x.PreviewBody, "", new { @class = "text-danger" })
        </div>
    }
    <div class="col-12">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</div>

<script>
    function getImageUploadHandler() {
        return '@Url.Action("UploadArticleFileAttachments", "Articles", new { area = "Admin", articleId = Model.Id })'
    }
</script>