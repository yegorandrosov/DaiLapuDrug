@model ArticleViewModel

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="form-group col-12">
                <input asp-for="IsPublished" type="checkbox" />
                <label asp-for="IsPublished" class="control-label">Is published?</label>
            </div>
            <div class="form-group col-12">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" type="text" class="form-control" />
                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <label asp-for="Body" class="control-label">Description</label>
            <textarea asp-for="Body" type="text" class="form-control html-editor"></textarea>
        </div>
    </div>
    <div class="col-12">
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Submit" />
        </div>
    </div>
</div>