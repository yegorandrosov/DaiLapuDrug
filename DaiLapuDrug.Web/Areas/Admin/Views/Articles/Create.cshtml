@model ArticleViewModel

@{
    if (Model.PetId == null)
    {
        ViewBag.Title = "Create article";
    }
    else
    {
        ViewBag.Title = "Create pet post";
    }
}

<h3>@ViewBag.Title</h3>

<form asp-action="Create" asp-controller="Articles" asp-area="Admin">
    <input type="hidden" asp-for="Id" />

    <partial name="_Item" model="Model">
</form>